{
  "expo": {
    "name": "ComicCoin Public Faucet",
    "slug": "comiccoin-publicfaucet",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "jsEngine": "hermes",
    "ios": {
      "usesAppleSignIn": false,
      "usesIcloudStorage": false,
      "supportsTablet": false,
      "bundleIdentifier": "com.theshootingstarpress.comiccoinpublicfaucet",
      "config": {
        "usesNonExemptEncryption": false
      },
      "entitlements": {
        "com.apple.developer.default-data-protection": "NSFileProtectionComplete"
      },
      "buildNumber": "1.0.0",
      "infoPlist": {
        "CFBundleDisplayName": "Public Faucet"
      },
      "privacyManifests": {
        "NSPrivacyTracking": true,
        "NSPrivacyCollectedDataTypes": [
          {
            "NSPrivacyCollectedDataType": "identifiers",
            "NSPrivacyCollectedDataTypeLinked": true,
            "NSPrivacyCollectedDataTypeTracking": true,
            "NSPrivacyCollectedDataTypePurposes": ["app-functionality"]
          },
          {
            "NSPrivacyCollectedDataType": "contactInfo",
            "NSPrivacyCollectedDataTypeLinked": true,
            "NSPrivacyCollectedDataTypeTracking": false,
            "NSPrivacyCollectedDataTypePurposes": ["app-functionality"]
          }
        ],
        "NSPrivacyAccessedAPITypes": [
          {
            "NSPrivacyAccessedAPIType": "idfa",
            "NSPrivacyAccessedAPITypeReasons": ["9.1.1"]
          }
        ]
      }
    },
    "android": {
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.theshootingstarpress.comiccoinpublicfaucet",
      "permissions": [],
      "blockedPermissions": [
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#e5e5e5"
        }
      ],
      [
        "expo-secure-store",
        {
          "configureAndroidBackup": false,
          "faceIDPermission": "Allow $(PRODUCT_NAME) to access your Face ID biometric data."
        }
      ],
      [
        "expo-tracking-transparency",
        {
          "userTrackingPermission": "This identifier will be used by ComicCoin Faucet to ensure only you get your daily ComicCoins and prevent duplicate claims."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "githubUrl": "https://github.com/comiccoin-network/monorepo"
  }
}
